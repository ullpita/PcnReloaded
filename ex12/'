int		ft_iterative_factorial(int nb)
{
		int	i;
		int	f;
			
		if (nb >= 2)
		{
			i = 0;
			f = nb;
			while (++i < nb)
				f = f * (nb - i);
			ft_putnbr(f);
			return (f);
		}
		else
			return (1);
}

int		main(void)
{
	int		nb;

	nb = 2;
	ft_iterative_factorial(nb);
	return (0);
}
